<div class="home_banner d-flex align-items-center justify-content-center text-center text-white" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path 'cinema_wbjuyz', crop: :fill %>')">
  <div class="d-flex-column">
    <h1>All lists</h1>
    <%= link_to "New List", new_list_path, class: "btn btn-primary"%>
  </div>
