<div class="home_banner d-flex align-items-center justify-content-center text-center text-white" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path 'https://images.unsplash.com/photo-1595769816263-9b910be24d5f?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1779&q=80', crop: :fill %>')">
  <div class="d-flex-column">
    <h1>All lists</h1>
    <%= link_to "New List", new_list_path, class: "btn btn-primary"%>
  </div>
</div>
<div class="container">
  <% @lists.each do |list| %>
    <%= cl_image_tag "#", height: 300, width: 400, crop: :fill %>
    <%= link_to list.name, list_path(list) %>
  <%end%>
</div>
